#!/bin/bash

mute="0"
volstat=$(amixer get Master)
vol=$(echo "$volstat" | grep "Right" | grep -o "\[[0-9]\+%\]" | sed 's/[^0-9]*//g')
echo "$volstat" | grep "\[off\]" > /dev/null && mute="1"

#echo $mute$vol%

if [ "$vol" -gt 0 ] && [ "$vol" -lt 32 ]; then volicon=" ðŸ”ˆ"; fi
if [ "$vol" -gt 31 ] && [ "$vol" -lt 66 ]; then volicon=" ðŸ”‰ "; fi
if [ "$vol" -gt 65 ]; then volicon=" ðŸ”Š "; fi
if [ "$mute" = "1" ]; then volicon=" ðŸ”‡ "; fi

echo $volicon $vol%
