#!/bin/bash

mute="0"
volstat=$(amixer get Master)
vol=$(echo "$volstat" | grep "Right" | grep -o "\[[0-9]\+%\]" | sed 's/[^0-9]*//g')
echo "$volstat" | grep "\[off\]" > /dev/null && mute="1"

if [ "$vol" -gt 0 ] && [ "$vol" -lt 32 ]; then volicon=" ğŸ”ˆ "; fi
if [ "$vol" -gt 31 ] && [ "$vol" -lt 66 ]; then volicon=" ğŸ”‰ "; fi
if [ "$vol" -gt 65 ]; then volicon=" ğŸ”Š "; fi
if [ "$mute" = "1" ]; then volicon=" ğŸ”‡ "; fi

echo $volicon $vol% > ~/.status/sound
