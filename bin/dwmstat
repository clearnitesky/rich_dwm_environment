#!/bin/bash

while true
do

sec=$(date +%S | cut -b 1)

keylayout=$(~/.local/bin/keyicon)
soundcheck=$(~/.local/bin/volicon)
powercheck=$(~/.local/bin/powericon)
netstatus=$(~/.local/bin/neticon)
date="$(date +'%d %B %Y')"
stime="$(date +'%H:%M')"

xsetroot -name " [ $stime ]  [ $date ]  [ $keylayout $powercheck $soundcheck $netstatus ]  [ richcolq.xyz dwm build 0.3 ] "

until [ $sec = "0" ];
do
   sleep 10
   sec=$(date +%S | cut -b 1)
done

done
