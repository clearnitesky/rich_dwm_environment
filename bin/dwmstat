#!/bin/bash

while true
do

sec=$(date +%S | cut -b 1)
powercheck
soundcheck
netstatus

layout=$(awk '{print $1}' ~/.status/keymap)
sound=$(awk '{print $1}' ~/.status/sound)
power=$(awk '{print $1}' ~/.status/power)
network=$(awk '{print $1}' ~/.status/network)
date="$(date +'%d %B %Y')"
stime="$(date +'%H:%M')"

xsetroot -name " [ $layout ]  [ $power $sound $network ]  [ $date ]  [ $stime ] "

	until [ $sec = "0" ];
	do
   		sleep 10
   		sec=$(date +%S | cut -b 1)
	done

done
