#!/bin/bash

while true
do

sec=$(date +%S | cut -b 1)

soundcheck=$(~/.local/bin/volicon)
powercheck=$(~/.local/bin/powericon)
netstatus=$(~/.local/bin/neticon)
#date="$(date +'%d %Bi %Y')"
stime="$(date +'%H:%M')"

xsetroot -name " [ $powercheck $soundcheck $netstatus ]  [ $stime ] "

until [ $sec = "0" ];
do
   sleep 10
   sec=$(date +%S | cut -b 1)
done

done
