#!/bin/bash

ethup=$(cat /sys/class/net/eth0/operstate)
wifiup=$(cat /sys/class/net/wlan0/operstate)

if [ $wifiup = "up" ]; then
   nettype="WiFi"
        ip=$(/sbin/ip -o -4 addr list wlan0 | awk '{print $4}' | cut -d/ -f1)
elif [$ethup = "up" ]; then
   nettype="Ethernet"
        ip=$(/sbin/ip -o -4 addr list eth0 | awk '{print $4]' | cut -d/ -f1)
else
   nettype="None"
        ip=""
fi

echo $nettype : $ip
