#!/bin/sh

which=$(echo "" | dmenu -p "Select Keyboard Layout: ")
# for debugging: echo "selected $which"

if [ $which = "us" ]; then
	echo "Keymap : ðŸ‡ºðŸ‡¸ American" > ~/.status/04keymap
elif [ $which = "gb" ]; then
	echo "Keymap : ðŸ‡¬ðŸ‡§ British" > ~/.status/04keymap
elif [ $which = "es" ]; then
	echo "Keymap : ðŸ‡ªðŸ‡¸ EspaÃ±ol" > ~/.status/04keymap
else notify-send " Keyboard Switch Cancelled " && exit 1
fi

notify-send " UPDATED $(cat ~/.status/04keymap) "
setxkbmap $which
# pkill -RTMIN+14 dwmblocks
rsbar
