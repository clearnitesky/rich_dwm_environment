#!/bin/sh

which=$(echo "" | dmenu -p "Select Keyboard Layout: ")
echo "selected $which"

if [ $which = "us" ]; then
	echo "us" > ~/.local/keymap
	flag="ðŸ‡ºðŸ‡¸"
elif [ $which = "gb" ]; then
	echo "gb" > ~/.local/keymap
	flag="ðŸ‡¬ðŸ‡§"
elif [ $which = "es" ]; then
	echo "es" > ~/.local/keymap
	flag="ðŸ‡ªðŸ‡¸"
else notify-send " Keyboard Switch Cancelled " && exit 1
fi

notify-send " âŒ¨ Keyboard Layout Changed to $flag "
# echo "Changing now"
setxkbmap $which
rsbar
