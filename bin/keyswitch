#!/bin/sh

which=$(echo "" | dmenu -p "Select Keyboard Layout: ")
# for debugging: echo "selected $which"

if [ $which = "us" ]; then
	echo "ðŸ‡ºðŸ‡¸ American" > ~/.status/keym
elif [ $which = "gb" ]; then
	echo "ðŸ‡¬ðŸ‡§ British" > ~/.status/keymap
elif [ $which = "es" ]; then
	echo "ðŸ‡ªðŸ‡¸ EspaÃ±ol" > ~/.status/keymap
