### HOT KEYS ETC ###

#XF86Launch1
#	xset dpms force off
XF86TouchpadToggle
 	(synclient | grep "TouchpadOff.*1" && synclient TouchpadOff=0) || synclient TouchpadOff=1
XF86Touchpad{Off,On}
	synclient TouchpadOff={1,0}

XF86MonBrightnessDown
	brightnessctl s 5%-
XF86MonBrightnessUp
	brightnessctl s +5%

# AUDIO KEYS

XF86AudioMute
	amixer sset Master toggle; notify-send "$(~/bin/soundcheck)" -t 500; rsbar
XF86Audio{Raise,Lower}Volume
	amixer sset Master 5%{+,-}; notify-send "$(~/bin/soundcheck)" -t 500; rsbar

