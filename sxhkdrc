### PROGRAM LAUNCH ###

### Config Progs ###

alt + shift + w
	st -e nmtui
alt + shift + t
	st -e vtop
alt + shift + e
	dmenuunicode
alt + shift + r
	arandr
alt + shift + a
	st -e pulsemixer
alt + shift + s
	st -e sudo wavemon
alt + shift + c
	clipmenu -sf \#303030 -sb \#ffcc00
alt + shift + m
	notify-send "Checking for mail." -t 1500; mailsync -a
alt + shift + F4
	scrot

### Standard Progs ###

alt + m
	st -e neomutt
alt + w
	brave
alt + f
	pcmanfm
alt + l
	frescobaldi
alt + n
	liferea

### HOT KEYS ETC ###

#XF86Launch1
#	xset dpms force off
XF86TouchpadToggle
 	(synclient | grep "TouchpadOff.*1" && synclient TouchpadOff=0) || synclient TouchpadOff=1
XF86Touchpad{Off,On}
	synclient TouchpadOff={1,0}

XF86MonBrightnessDown
	brightnessctl s 5%-
XF86MonBrightnessUp
	brightnessctl s +5%

# AUDIO KEYS

XF86AudioMute
	amixer sset Master toggle; notify-send "$(~/bin/soundcheck)" -t 500; rsbar
XF86Audio{Raise,Lower}Volume
	amixer sset Master 5%{+,-}; notify-send "$(~/bin/soundcheck)" -t 500; rsbar

